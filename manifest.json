{
  "manifest_version": 2,
  "name": "CS2 Case Opening Analyzer",
  "description": "Analyze CS2 Case Openings from your Steam Inventory History.",
  "version": "1.0",
  "homepage_url": "https://github.com/laeborg/caseanalyzer-firefox",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/*/inventoryhistory*"],
      "js": ["caseanalyzer.js"]
    }
  ],
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}
